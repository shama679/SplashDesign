<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContinueForLogin">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_anim"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="smile_anim.json" />

    <TextView
        android:id="@+id/exploreTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lottie_anim"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/"
        android:text="Let's Explore The World"
        android:textColor="#1B2586"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/continueForLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/exploreTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:fontFamily="monospace"
        android:text="Continue To Login"
        android:textColor="#1B2586"
        android:textSize="18dp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/continue_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="sans-serif-black"
        android:text="Continue"
        android:textColor="#FFF"
        android:textSize="18sp" />


</RelativeLayout>
